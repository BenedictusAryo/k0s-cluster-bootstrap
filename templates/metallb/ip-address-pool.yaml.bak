{{- if .Values.metalLb.ipAddressPool.enabled }}
---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: default-ip-pool
  namespace: metallb-system
spec:
  addresses:
    - {{ required "A MetalLB IP address range is required. Set metalLb.ipAddressPool.range in values.yaml" .Values.metalLb.ipAddressPool.range }}
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: default-l2-advertisement
  namespace: metallb-system
spec:
  ipAddressPools:
    - default-ip-pool
{{- end }}