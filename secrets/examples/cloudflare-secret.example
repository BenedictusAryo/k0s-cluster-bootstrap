apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-api-token
  namespace: default
type: Opaque
stringData:
  # Cloudflare API Token for DNS management
  # Replace with your actual Cloudflare API token
  api-token: "your-cloudflare-api-token-here"
  
  # Optional: Cloudflare Email
  email: "your-email@example.com"
  
  # Optional: Zone ID
  zone-id: "your-zone-id-here"

---
# To create a sealed secret from this file:
# 1. First, ensure sealed-secrets controller is running
# 2. Install kubeseal CLI: https://github.com/bitnami-labs/sealed-secrets#installation
# 3. Run the following command:
#    kubeseal --format=yaml < cloudflare-secret.example > cloudflare-sealed-secret.yaml
# 4. Apply the sealed secret:
#    kubectl apply -f cloudflare-sealed-secret.yaml
